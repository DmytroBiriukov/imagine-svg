{
    "name": "contao/imagine-svg",
    "type": "library",
    "description": "Contao Imagine SVG library",
    "license": "LGPL-3.0+",
    "authors": [
        {
            "name": "Leo Feyer",
            "homepage": "https://github.com/leofeyer"
        }
    ],
    "require": {
        "php": ">=5.4.0",
        "ext-dom": "*",
        "imagine/imagine": "~0.6"
    },
    "require-dev": {
        "fabpot/php-cs-fixer": "~1.8",
        "phpunit/phpunit": "~4.5",
        "symfony/filesystem": "~2.8 | ~3.0",
        "satooshi/php-coveralls": "~0.6"
    },
    "autoload": {
        "psr-4": {
            "Contao\\ImagineSvg\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Contao\\ImagineSvg\\Test\\": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-develop": "1.0.x-dev"
        }
